            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="#667D7C80"
            android:text="@string/sil"
            android:textColorHint="#667D7C80"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#667D7C80"
            app:iconTint="#667D7C80"
            app:layout_constraintBottom_toTopOf="@+id/button80"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button00"
            app:rippleColor="#667D7C80" />

        <Button
            android:id="@+id/button90"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
