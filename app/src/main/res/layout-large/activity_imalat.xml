            app:layout_constraintBottom_toTopOf="@+id/button50"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="#667D7C80" />

        <Button
            android:id="@+id/button80"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="#667D7C80"
            android:text="@string/_8"
            android:textColorHint="#667D7C80"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#667D7C80"
            app:iconTint="#667D7C80"
            app:layout_constraintBottom_toTopOf="@+id/button40"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button70"
            app:rippleColor="#667D7C80" />

        <Button
            android:id="@+id/button70"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:background="#667D7C80"
            android:text="@string/_7"
            android:textColorHint="#667D7C80"
