<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activityler.PersonelDuzenlemeActivity">

    <EditText
        android:id="@+id/editTextDuzenleAd"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="PERSONEL AD"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editTextDuzenleTel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDuzenleTel"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="PERSONEL TELEFON"
        android:inputType="textPersonName"
        android:maxLength="11"
        app:layout_constraintBottom_toTopOf="@+id/editTextDuzenleSifre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDuzenleAd" />

    <EditText
        android:id="@+id/editTextDuzenleSifre"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="PERSONEL ŞİFRE"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/spinnerDuzenle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDuzenleTel" />

    <Button
        android:id="@+id/buttonDuzenleKaydet"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="Kaydet"
        android:textSize="24sp"
        app:backgroundTint="#2196F3"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDuzenle" />

    <Spinner
        android:id="@+id/spinnerDuzenle"
        android:layout_width="400dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDuzenleKaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDuzenleSifre" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="50dp"
        android:text="Personel ID :"
        android:textColor="#A62626"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDuzenleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView37"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>